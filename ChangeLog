	- [update] moom-font-ja

	* moom.el: version 1.1.0
	- [new] moom-fill-band-options
	- [new] moom-scaling-gradient
	- [new] moom-generate-font-table
	- [new] moom-recommended-keybindings
	- [update] moom-fill-band
	- [update] moom-move-frame-to-center
	- [update] moom-print-status
	- [update] moom-toggle-font-module

